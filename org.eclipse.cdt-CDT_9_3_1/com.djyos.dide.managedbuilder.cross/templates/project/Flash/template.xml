<?xml version="1.0" encoding="ISO-8859-1"?>
<template type="ProjTempl" version="1.0" supplier="c-sky.com" revision="1.0" author="QingJing"
		copyright="Copyright (c) 2008-2015 HangZhou C-Sky Microsystem Ltd. All rights reserved. This program and the accompanying materials are made available under the terms of the Eclipse Public License v1.0 which accompanies this distribution, and is available at http://www.eclipse.org/legal/epl-v10.html"
		id="FlashProject" label="CDS Flash Project" description="FlashProject"
		 help="help.html">
	<property-group id="basics" label="%Flash.basics.label" description="%Flash.basics.description" type="PAGES-ONLY" help="help.html">
		<property id="archDir"
				label="Source"
				description="Directory for the project arch source files"
				type="input"
				default="arch"
				hidden="true"
				pattern="[a-zA-Z0-9]+"
				persist="true"/>
		<property id="sourceDir"
				label="%Flash.sourceDir.label"
				description="%Flash.sourceDir.description"
				type="input"
				default="%Flash.sourceDir.default"
				hidden="true"
				pattern="[a-zA-Z0-9]+"
				persist="true"/>
		<property id="includeDir"
				label="%Flash.includeDir.label"
				description="%Flash.includeDir.description"
				type="input"
				default="%Flash.includeDir.default"
				hidden="true"
				pattern="[a-zA-Z0-9]+"
				persist="true"/>				
		<property id="memoryStart"
				label="%Flash.memoryStart.label"
				description="%Flash.memoryStart.description"
				type="input"
				pattern="0[xX][a-fA-F0-9]{0,7}[048cC]"
				default=""
				hidden="false"
				mandatory="true"
				persist="true"/>
		<property id="memoryLength"
				label="%Flash.memoryLength.label"
				description="%Flash.memoryLength.description"
				type="input"
				pattern="0[xX]([a-fA-F0-9]{1,7}[048cC]|[48cC])"
				default=""
				mandatory="true"
				hidden="false"
				persist="true"/>
		<property id="command0"
				label="%Flash.target.command0"
				description="%Flash.target.command.description"
				type="input"
				pattern=".*"
				default=""
				hidden="false"
				persist="true"/>
		<property id="command1"
				label="%Flash.target.command1"
				description="%Flash.target.command.description"
				type="input"
				pattern=".*"
				default=""
				hidden="false"
				persist="true"/>
		<property id="command2"
				label="%Flash.target.command2"
				description="%Flash.target.command.description"
				type="input"
				pattern=".*"
				default=""
				hidden="false"
				persist="true"/>
		<property id="command3"
				label="%Flash.target.command3"
				description="%Flash.target.command.description"
				type="input"
				pattern=".*"
				default=""
				hidden="false"
				persist="true"/>
	</property-group>
	
	<process type="org.eclipse.cdt.managedbuilder.core.NewManagedProject">
		<simple name="name" value="$(projectName)" /> 
		<simple name="artifactExtension" value="exe" /> 
		<simple name="isCProject" value="true" /> 
	</process>
	
	<process type="org.eclipse.cdt.core.AddFiles">
		<simple name="projectName" value="$(projectName)"/>
		<complex-array name="files">
			<element>
				<simple name="source" value="crt0.S"/>
				<simple name="target" value="$(archDir)/crt0.S"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="src/main.c"/>
				<simple name="target" value="$(sourceDir)/$(projectName).c"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="src/driver.c"/>
				<simple name="target" value="$(sourceDir)/driver.c"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="inc/cpu-config.h"/>
				<simple name="target" value="$(includeDir)/$(projectName).h"/>
				<simple name="replaceable" value="true"/>
			</element>			
			<element>
				<simple name="source" value="ckcpu.ld"/>
				<simple name="target" value="ckcpu.ld"/>
				<simple name="replaceable" value="true"/>
			</element>
			<element>
				<simple name="source" value="gdb.init"/>
				<simple name="target" value="gdb.init"/>
				<simple name="replaceable" value="true"/>
			</element>
		</complex-array>
	</process>
		
	<process type="org.eclipse.cdt.managedbuilder.core.SetMBSStringOptionValue">
        <simple name="projectName" value= "$(projectName)"/>      
        <complex-array name="resourcePaths">
            <element>
                <simple name="id" value=".*linkfile"/>
                <simple name="value" value="&quot;${workspace_loc:/${ProjName}/ckcpu.ld}&quot;"/>
                <simple name="path" value="" />
            </element>
        </complex-array>
    </process>
    
    <process type="org.eclipse.cdt.managedbuilder.core.AppendToMBSStringListOptionValues">
        <simple name="projectName" value= "$(projectName)"/>      
        <complex-array name="resourcePaths">
            <element>
                <simple name="id" value=".*include.paths"/>
                <simple-array name="values">
                   <element value="&quot;${workspace_loc:/${ProjName}/$(includeDir)}&quot;"/>
                </simple-array>
                <simple name="path" value="" />
            </element>
        </complex-array>
    </process>    
    
    <process type="org.eclipse.cdt.managedbuilder.core.SetMBSStringOptionValue">
        <simple name="projectName" value= "$(projectName)"/>      
        <complex-array name="resourcePaths">
            <element>
                <simple name="id" value=".*cdsFlashProgramer.release.option.debugging.level"/>
                <simple name="value" value="ckcoregcc.c.compiler.debugging.level.default"/>
                <simple name="path" value="" />
            </element>
        </complex-array>
    </process>

</template>